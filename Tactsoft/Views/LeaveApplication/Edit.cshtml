@model Tactsoft.Core.Entities.LeaveApplication

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Update Leave Application</h3>
                </div>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />



                        <div class="row mb-2">
                            <label asp-for="EmployeeId" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                                    <option value="">Select Employee</option>
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="LeaveTypeId" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <select asp-for="LeaveTypeId" class="form-control" asp-items="ViewBag.LeaveTypeId">
                                    <option value="">Select Leave Type</option>
                                </select>
                                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="AttachmentFile" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="AttachmentFile" class="form-control" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <label asp-for="StartDate" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="StartDate" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="EndDate" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="EndDate" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="Subject" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Subject" class="form-control" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="Description" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>







                    </div>


                    <div class="card-footer">
                        <div style="text-align:end">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                <i class="far fa-window-close"></i> Cancel
                            </a>
                            <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                <i class="fa-solid fa-rotate"></i> Update
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }


