@model Tactsoft.Core.Entities.Training

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Training</h4>
<hr />
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create Training Information</h3>
                </div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="row mb-2">
                                    <label asp-for="EmployeeId" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="TrainingName" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="TrainingName" class="form-control" />
                                        <span asp-validation-for="TrainingName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="StartDate" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="StartDate" class="form-control" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="EndDate" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="EndDate" class="form-control" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="OrganigationName" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="OrganigationName" class="form-control" />
                                        <span asp-validation-for="OrganigationName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div style="text-align:end">
                                        <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                            <i class="far fa-window-close"></i> Back to list
                                        </a>
                                        <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                            <i class="fa-solid fa-rotate"></i> Create
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }
