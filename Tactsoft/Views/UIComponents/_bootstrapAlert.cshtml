@if (TempData["successAlert"] != null)
{
    <div id="alert" style="position:absolute; font-size:13pt; font-weight:100; opacity:100%; top:1%;right:1%; z-index:999" class="alert alert-success" role="alert">
        <i class="far fa-check-circle"></i> <strong>@TempData["successAlert"]</strong>
        <div class="linep al"></div>
    </div>
}

@if (TempData["errorAlert"] != null)
{
    <div id="alert" style="position:absolute; font-size:15pt; font-weight:100; opacity:100%; top:1%;right:1%; z-index:999" class="alert alert-danger" role="alert">
        <i class="far fa-times-circle"></i> <strong>@TempData["errorAlert"]</strong>
    </div>
}
