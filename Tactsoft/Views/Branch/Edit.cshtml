@model Tactsoft.Core.Entities.BranchInfo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Update Branch Information</h3>
                </div>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row mb-2">
                            <label asp-for="BranceName" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="BranceName" class="form-control" />
                                <span asp-validation-for="BranceName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="BranchAddress" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="BranchAddress" class="form-control" />
                                <span asp-validation-for="BranchAddress" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="CompanyInfoId" class="col-md-3 col-form-label" ></label>
                            <div class="col-md-9">
                                <select asp-for="CompanyInfoId" class="form-control" asp-items="ViewBag.CompanyInfoId">
                                    <option value="">Select Company</option>
                                    </select>
                                <span asp-validation-for="CompanyInfoId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="CountryId" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId" >
                                    <option> Select Country</option>
                                    </select>
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="ZipCodeId" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <select asp-for="ZipCodeId" class="form-control" asp-items="ViewBag.ZipCodeId">
                                    <option value="">Select ZipCode</option>
                                    </select>
                                <span asp-validation-for="ZipCodeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="StateId" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <select asp-for="StateId" class="form-control" asp-items="ViewBag.StateId" >
                                    <option value="">Select State</option>
                                </select>
                                <span asp-validation-for="StateId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="CityId" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId" >
                                    <option value="">Select City</option>
                                </select>
                                <span asp-validation-for="CityId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="Email" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="ContactNumber" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="ContactNumber" class="form-control" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div style="text-align:end">
                                <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                    <i class="far fa-window-close"></i> Cancel
                                </a>
                                <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                    <i class="fa-solid fa-rotate"></i> Update
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}