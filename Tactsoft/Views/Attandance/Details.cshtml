@model Tactsoft.Core.Entities.Attandance

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                   
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title">@ViewData["Title"] List</h3>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Create">
                            <i class="fa-regular fa-pen-to-square"></i> Add New
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="cpl-md-8">
                            <dl class="row">
                                
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.EmployeeId)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.Employee.FristName)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.AttandanceDate)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.AttandanceDate)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Present)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.Present)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.Remarks)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-end">

                                <a class="btn btn-outline-danger btn-sm mr-2" asp-action="Index">
                                    <i class="far fa-window-close"></i> Cancel
                                </a>
                                <a class="btn btn-outline-primary btn-sm me-3" asp-action="Edit" asp-route-id="@Model?.Id">
                                    <i class="fa-regular fa-pen-to-square"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
