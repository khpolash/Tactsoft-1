@model IEnumerable<Tactsoft.Core.Entities.EmployeeType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title">@ViewData["Title"] List</h3>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Create">
                            <i class="fa-regular fa-pen-to-square"></i> Add New
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th colspan="4" style="text-align:center">
                                    Working Day
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateOfParmanent)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </th>

                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>

                                    <td>
                                        @Html.DisplayNameFor(model => model.Sat)
                                        @Html.DisplayFor(modelItem => item.Sat)
                                    </td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Sun)
                                        @Html.DisplayFor(modelItem => item.Sun)
                                    </td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Mon)
                                        @Html.DisplayFor(modelItem => item.Mon)
                                    </td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Tue)
                                        @Html.DisplayFor(modelItem => item.Tue)
                                    </td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Wed)
                                        @Html.DisplayFor(modelItem => item.Wed)
                                    </td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Thu)
                                        @Html.DisplayFor(modelItem => item.Thu)
                                    </td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Fri)
                                        @Html.DisplayFor(modelItem => item.Fri)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOfParmanent)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Remarks)
                                    </td>

                                    <td style="width:60px;text-align:center">
                                        @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "fa-regular fa-pen-to-square", @style = "color:green" }) |
                                        @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "fa-regular fa-eye", @style = "color:blue" }) |
                                        @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "fa-regular fa-trash-can", @style = "color:red" })
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
<partial name="~/Views/UIComponents/_bootstrapAlert.cshtml" />

@section Scripts{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": true, "autoWidth": true,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
    </script>
}
